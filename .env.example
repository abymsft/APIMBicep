# Environment configuration for Azure API Management deployment

# Azure region where resources will be deployed
AZURE_LOCATION=swedencentral

# API Management service configuration
AZURE_APIM_SERVICE_NAME=apim-dev
AZURE_APIM_SKU=Developer
AZURE_APIM_CAPACITY=1

# Publisher information (required for API Management)
AZURE_PUBLISHER_NAME=Your Organization
AZURE_PUBLISHER_EMAIL=admin@yourorganization.com

# Environment name for resource tagging
AZURE_ENV_NAME=dev

# Automatically publish the developer portal after deployment
AZURE_AUTO_PUBLISH_PORTAL=true

# Subscription and authentication (set these as secrets in GitHub)
# AZURE_SUBSCRIPTION_ID=your-subscription-id
# AZURE_CLIENT_ID=your-client-id
# AZURE_CLIENT_SECRET=your-client-secret
# AZURE_TENANT_ID=your-tenant-id
